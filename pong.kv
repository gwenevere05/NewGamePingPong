#:kivy 1.8.0

<ScreenManagement>:
    StartMenu:
    PongMenu:


<PongBall>:
    size: 50, 50 
    canvas:
        Color:
            rgba: 255, 250, 250, 1.0
        Ellipse:
            pos: self.pos
            size: self.size          

<PongPaddle>:
    size: 25, 200
    canvas:
        Color:
            rgba: 0, 127, 255, 1.0
        Rectangle:
            pos:self.pos
            size:self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    
    canvas:
        Rectangle:
            pos: self.center_x-5, 0
            size: 10, self.height
    
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)
    
    PongBall:
        id: pong_ball
        right: self.parent.right
        
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y





<StartMenu>:
    id: start_menu
 
    name: 'home'
    Button:
        background_color: 148, 0, 211, 1.0
        text: '    Welcome To     Ping Pong Tournament'
        color: 255, 255, 255, 1.0
        halign: 'center'
        valign: 'middle'
        font_size: 100
        text_size: self.size
        on_press: root.manager.current = 'foogame'; root.serve_ball

<PongMenu>:
    name: 'foogame'
    PongGame:
        id: game  


<EndMenu>:
    id: End

    Screen:
        name: 'home'
        Button:
            background_color: 148, 0, 211, 1.0
            text: 'Game Over'
            color: 255, 255, 255, 1.0
            halign: 'center'
            valign: 'middle'
            font_size: 100
            text_size: self.size
            on_release: 




